<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_orange"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context="com.getpebble.pebblekitexample.MainActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/press_a_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity Detected"
            android:textColor="#AAAAAA"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/button_vibrate"
            android:layout_alignStart="@+id/button_vibrate" />

        <TextView
            android:id="@+id/which_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/press_a_button"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="None yet"
            android:textColor="#AAAAAA"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/trigger_vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Trigger a vibration"
            android:textColor="#AAAAAA"
            android:textSize="25sp"
            android:layout_above="@+id/button_vibrate"
            android:layout_centerHorizontal="true" />
        
        <Button
            android:id="@+id/button_vibrate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/actionbar_orange"
            android:text="VIBRATE"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="44dp" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/vmartin/Developer/hackathon/android/app/src/main/res/layout/activity_main.xml -->